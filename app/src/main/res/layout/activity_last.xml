<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_last_below"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_venue_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="VenueName"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_venue_vicinity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:gravity="center"
            android:text="VenueVicinity"
            android:textSize="18sp" />
    </LinearLayout>

    <fragment
        android:id="@+id/last_map"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="5dp"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <ProgressBar
        android:id="@+id/pb_details"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/ll_last_top"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_venue_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:clickable="true"
            android:text="VenuePhone"
            android:autoLink="phone"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_venue_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="VenueUrl"
            android:autoLink="web"
            android:clickable="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_venue_twt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:autoLink="web"
            android:text="VenueTwitter"
            android:clickable="true"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>